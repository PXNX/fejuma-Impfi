<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="de.fejuma.impfi.ui.screen.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_start_game"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_start_scoreboard"
            app:destination="@id/scoreboardFragment" />
        <action
            android:id="@+id/action_start_about"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="de.fejuma.impfi.ui.screen.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_game_scoreboard"
            app:destination="@id/scoreboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/scoreboardFragment"
        android:name="de.fejuma.impfi.ui.screen.scoreboard.ScoreboardFragment"
        android:label="fragment_scoreboard"
        tools:layout="@layout/fragment_scoreboard" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="de.fejuma.impfi.ui.screen.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>